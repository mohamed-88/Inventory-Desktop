{
  "name": "ahmed-electric-inventory",
  "version": "1.0.0",
  "description": "Ahmed Electric - Offline Inventory System",
  "main": "electron.js",
  "homepage": "./",
  "author": "Mohamed-88 (Ahmed Receipt)",
  "license": "ISC",
  "scripts": {
    "start-client": "cd client && npm start",
    "start-server": "node server/server.js",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "dev": "concurrently -k \"npm run start-client\" \"npm run start-server\" \"npm run electron:dev\"",
    "postinstall": "npm install --prefix client",
    "build": "npm run build:react && electron-builder",
    "build:react": "npm run build --prefix client"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "1.0.1",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.3.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ahmedelectric.inventory",
    "productName": "Ahmed Electric Inventory",
    "files": [
      "electron.js",
      "client/build/**/*",
      "server/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
